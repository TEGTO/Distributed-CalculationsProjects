<bindings wsdlLocation="http://localhost:8080/jaxrpc-fromwsdl_mime_simple_doclit/simple?wsdl" xmlns="http://java.sun.com/xml/ns/jaxws" xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/">
